<h1>Listing all Todos</h1>
<p>
    <%= link_to "Create a Todo", new_todo_path %>
</p>

<table>
    <tr>
        <th>Name</th>
        <th>Description</th>
    </tr>

    <% @todos.each do |todo|%>
    <tr>
        <th> <%= todo.name %> </th>
        <th> <%= todo.description %></th>
        <th> <%= link_to "edit", edit_todo_path(todo) %> </th>
        <th> <%= link_to "show", todo_path(todo) %></th>
        <th><%= link_to 'Delete', todo_path(todo) ,data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
        </th>
        
    </tr>
    <%end%>
</table>